#
RM            = @RM@
MV            = @MV@
INSTALL       = @INSTALL@
INSTALL_DATA  = @INSTALL_DATA@
prefix        = @prefix@
messagedir    = @prefix@/messages

CLOBBER=@CLOBBER@

LANGFILES     = ayb.lang            \
                ircd-croatian.lang  \
                ircd-danish.lang    \
                ircd-dutch.lang     \
		ircd-french.lang    \
                ircd-german.lang    \
                ircd-norwegian.lang \
                ircd-russian.lang   \
                ircd-spanish.lang   \
                ircd-swedish.lang

all:

install:
	mkdir -p $(messagedir)
	-@echo    "Installing language files to $(messagedir)...";          \

	@for i in $(LANGFILES); do                                          \
		if test -f $(messagedir)/$$i -a -z "$(CLOBBER)"; then         \
			echo $(MV) $(messagedir)/$$i $(messagedir)/$$i.old; \
			$(MV) $(messagedir)/$$i $(messagedir)/$$i.old;      \
		fi;                                                         \
		echo $(INSTALL_DATA) $$i $(messagedir);                     \
		$(INSTALL_DATA) $$i $(messagedir);                          \
	done

distclean:
	${RM} -f Makefile

.PHONY: install distclean
