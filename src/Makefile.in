CC		= @CC@
RM		= @RM@
MV		= @MV@
CP		= @CP@
INSTALL		= @INSTALL@
PREFIX		= @prefix@
BIN		= networkbopm@EXEEXT@
MKDEP		= @MKDEP@

# Default CFLAGS
#CFLAGS		= -g -O2 -Wall

# Developer CFLAGS
CFLAGS		= -g -O2 -Wunused -Wall -ggdb -pedantic -Wshadow -Wmissing-declarations -Wno-long-long

CFLAGS		+= -I../include/

VERSION		= 1.0

LIBS		= @LIBS@ ../libopm/libopm.a
LDFLAGS		= @LDFLAGS@
CPPFLAGS	= @CPPFLAGS@

default: all

BASE_SRCS = function.c irc.c memory.c list.c socket.c utility.c conf.c confp.c
SRCS = ${BASE_SRCS}

OBJS = ${SRCS:.c=.o}

all: networkbopm

build: all

networkbopm: $(OBJS)
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ ${OBJS} ${LIBS}

.c.o:
	${CC} ${CPPFLAGS} ${CFLAGS} -c $<

clean:
	${RM} -f *.o *.exe *~ networkbopm.core core networkbopm

distclean: clean
	${RM} -f Makefile version.c.last
